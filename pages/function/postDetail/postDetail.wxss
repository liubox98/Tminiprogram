/* pages/function/postList/postList.wxss */
.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  overflow: hidden;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}

.post-author {
  font-weight: bold;
  margin-right: 4px;
}

.post-createtime {
  color: #999;
  font-size: 12px;
  margin-right: 4px;
}

.post-item {
  margin-bottom: 8px;
}

.post-text {
  margin-top: 8px;
  font-size: 18px;
}

.margin-16 {
  margin-top: 16px;
}

.t-tag {
  margin-top: 8px;
}

.icon-container {
  display: flex;
  align-items: center;
}

.icon-group {
  display: flex;
  align-items: center;
  margin-left: auto;
  /* 这会将图标组推到右侧 */
}

.icon-thumb-up,
.icon-chat {
  margin-left: 20px;
}