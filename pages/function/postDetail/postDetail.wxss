/* pages/function/postList/postList.wxss */
.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  overflow: hidden;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 4px;
}

.post-author {
  font-weight: bold;
  margin-right: 4px;
}

.post-createtime {
  color: #999;
  font-size: 12px;
  margin-right: 4px;
}

.post-item {
  margin-bottom: 8px;
}

.post-text {
  margin-top: 8px;
  font-size: 14px;
  line-height: 1.4;
  max-height: 4.2em; /* 大约三行的高度，根据实际情况调整 */
  overflow: hidden;
}

.margin-16 {
  margin-top: 16px;
}

.t-tag {
  margin-top: 8px;
}
